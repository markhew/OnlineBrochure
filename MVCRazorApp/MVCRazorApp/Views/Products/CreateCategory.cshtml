{ 
    @Html.AntiForgeryToken() 
     
    <div class="form-horizontal"> 
        <h4>Product</h4> 
        <hr /> 
        @Html.ValidationSummary(true) 

        <div class="form-group"> 
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" }) 
